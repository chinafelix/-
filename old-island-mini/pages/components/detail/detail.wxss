.popular-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
}
.popular-top-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.popular-top-left .line {
  width: 2rpx;
  height: 70%;
  background-color: #333;
  margin: 0 20rpx;
}
/* .popular-top-left > .time:first-child {
  display: flex;
  flex-direction: row;
  align-items: baseline;
} */
.popular-top-left > .time:last-child {
  display: flex;
  flex-direction: column;
  justify-content: baseline;
}
.time-left > .text:first-child {
  font-size: 38rpx;
}
.time-left >.text:last-child {
  font-size: 76rpx;
  font-weight: 700;
}
.time-right > .text:last-child {
  font-size: 28rpx;
}

.popular-top-right {
  display: flex;
  align-items: center;
}
.heart {
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
.heart .love {
  font-size: 64rpx;
  color:pink;
}
.heart > .text {
  color: #999;
  align-self: flex-start;
}
.share {
  font-size: 50rpx;
  color: #666;
  padding-left: 50rpx;
  padding-right: 20rpx;
}
.backgound {
  position: relative;
}
.image {
  height: 240px;
}
.backgound >.text {
  position: absolute;
  left: 10%;
  top: 400rpx;
  width: 50rpx;
  font-size: 60rpx;
  color: #999;
  text-align: left;
  word-break: break-all;
  font-weight: normal;
}
.title {
  font-size: 36rpx;
  padding: 140rpx 100rpx 0;
  line-height: 60rpx;
}
